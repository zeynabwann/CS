@model Models.Commande.Commande

@{
    ViewData[""] = "Créer une Commande";
}

<h2>Créer une Commande</h2>

<form asp-action="CreerCommande" method="post">
    <div class="form-group">
        <label for="DateCommande">Date de la Commande</label>
        <input type="date" id="DateCommande" name="DateCommande" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Montant">Montant</label>
        <input type="number" id="Montant" name="Montant" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Créer Commande</button>
</form>
